  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // ========== DESKTOP NAVIGATION ==========
      const desktopMenu = document.getElementById('navMenu');
      const desktopHighlight = document.getElementById('navHighlight');
      const desktopNavItems = document.querySelectorAll('.nav-item');
      
      // ========== MOBILE NAVIGATION ==========
      const hamburger = document.getElementById('hamburger');
      const mobileMenu = document.getElementById('mobileMenu');
      const mobileNavItems = document.querySelectorAll('.mobile-nav-item');
      
      // ========== GET CURRENT PAGE ==========
      const currentPath = window.location.pathname;
      let currentPage = 'home';
      
      // More precise page detection
      if (currentPath === '/projects' || currentPath === '/projects/') {
        currentPage = 'projects';
      } else if (currentPath === '/gallery' || currentPath === '/gallery/') {
        currentPage = 'gallery';
      } else if (currentPath === '/about' || currentPath === '/about/') {
        currentPage = 'about';
      }
      // Default is 'home'
      
      console.log('Current path:', currentPath, 'Detected page:', currentPage);
      
      // ========== SET ACTIVE DESKTOP ITEM ==========
      desktopNavItems.forEach(item => {
        const itemId = item.getAttribute('data-item');
        console.log('Checking item:', itemId, 'against:', currentPage);
        
        if (itemId === currentPage) {
          item.classList.add('active');
          console.log('Activated:', itemId);
        } else {
          item.classList.remove('active');
        }
      });
      
      // ========== SET ACTIVE MOBILE ITEM ==========
      mobileNavItems.forEach(item => {
        const href = item.getAttribute('href');
        // Handle exact matches and home page
        if (href === currentPath || 
            (href === '/' && (currentPath === '/' || currentPath === '')) ||
            (href === '/projects' && currentPath.startsWith('/projects')) ||
            (href === '/gallery' && currentPath.startsWith('/gallery')) ||
            (href === '/about' && currentPath.startsWith('/about'))) {
          item.classList.add('active');
        } else {
          item.classList.remove('active');
        }
      });
      
      // ========== UPDATE DESKTOP HIGHLIGHT ==========
      function updateDesktopHighlight() {
        const activeItem = document.querySelector('.nav-item.active');
        if (!activeItem || !desktopHighlight || !desktopMenu) return;
        
        const desktopNavItems = document.querySelectorAll('.nav-item');
        const activeIndex = Array.from(desktopNavItems).indexOf(activeItem);
        
        if (activeIndex >= 0) {
          const itemHeight = 45; // Match the CSS height (45px)
          const position = activeIndex * (itemHeight + 4); // 4px gap between items
          
          console.log('Updating highlight. Active index:', activeIndex, 'Position:', position);
          
          if (desktopMenu.classList.contains('expanded')) {
            desktopHighlight.style.transform = `translateY(${position}px)`;
            desktopHighlight.style.width = 'calc(100% - 1rem)';
            desktopHighlight.style.left = '0.5rem';
            desktopHighlight.style.borderRadius = '20px';
          } else {
            desktopHighlight.style.transform = `translateX(-50%) translateY(${position}px)`;
            desktopHighlight.style.width = '45px';
            desktopHighlight.style.left = '50%';
            desktopHighlight.style.borderRadius = '50%';
          }
        }
      }
      
      // ========== DESKTOP MENU INTERACTIONS ==========
      if (desktopMenu) {
        // Check if we should keep menu expanded (from previous page)
        const wasExpanded = sessionStorage.getItem('navExpanded') === 'true';
        if (wasExpanded) {
          desktopMenu.classList.add('expanded');
        }
        
        // Hover to expand
        desktopMenu.addEventListener('mouseenter', function() {
          this.classList.add('expanded');
          sessionStorage.setItem('navExpanded', 'true');
          updateDesktopHighlight();
        });
        
        // Hover to collapse
        desktopMenu.addEventListener('mouseleave', function() {
          this.classList.remove('expanded');
          sessionStorage.setItem('navExpanded', 'false');
          updateDesktopHighlight();
        });
        
        // Click on nav items - don't collapse on click
        desktopNavItems.forEach(item => {
          const link = item.querySelector('.nav-link');
          if (link) {
            link.addEventListener('click', function(e) {
              // Don't prevent default - let the link work
              // Save expanded state before navigation
              sessionStorage.setItem('navExpanded', desktopMenu.classList.contains('expanded') ? 'true' : 'false');
            });
          }
        });
        
        // Initialize highlight position
        setTimeout(() => {
          updateDesktopHighlight();
        }, 100); // Small delay to ensure DOM is ready
      }
      
      // ========== MOBILE MENU INTERACTIONS ==========
      if (hamburger && mobileMenu) {
        // Toggle mobile menu
        hamburger.addEventListener('click', function() {
          this.classList.toggle('active');
          mobileMenu.classList.toggle('active');
          document.body.style.overflow = mobileMenu.classList.contains('active') ? 'hidden' : '';
        });
        
        // Close menu when clicking on a link
        mobileNavItems.forEach(link => {
          link.addEventListener('click', () => {
            hamburger.classList.remove('active');
            mobileMenu.classList.remove('active');
            document.body.style.overflow = '';
          });
        });
        
        // Close menu when clicking outside
        mobileMenu.addEventListener('click', (e) => {
          if (e.target === mobileMenu) {
            hamburger.classList.remove('active');
            mobileMenu.classList.remove('active');
            document.body.style.overflow = '';
          }
        });
      }
    });
  </script>
  
