<script>
  document.addEventListener('DOMContentLoaded', function() {
    const toolkitBtn = document.getElementById('toolkitBtn');
    const toolkitOverlay = document.getElementById('toolkitOverlay');
    const toolkitClose = document.getElementById('toolkitClose');

    // Make sure elements exist before adding event listeners
    if (toolkitBtn && toolkitOverlay && toolkitClose) {
      // Open overlay
      toolkitBtn.addEventListener('click', function(e) {
        e.preventDefault();
        toolkitOverlay.classList.add('active');
        document.body.style.overflow = 'hidden';
      });

      // Close with X button
      toolkitClose.addEventListener('click', function(e) {
        e.preventDefault();
        toolkitOverlay.classList.remove('active');
        document.body.style.overflow = '';
      });

      // Close when clicking outside the container
      toolkitOverlay.addEventListener('click', function(e) {
        if (e.target === toolkitOverlay) {
          toolkitOverlay.classList.remove('active');
          document.body.style.overflow = '';
        }
      });

      // Close with Escape key
      document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape' && toolkitOverlay.classList.contains('active')) {
          toolkitOverlay.classList.remove('active');
          document.body.style.overflow = '';
        }
      });
    }
  });
</script>