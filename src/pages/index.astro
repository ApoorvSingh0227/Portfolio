---
import Layout from '../components/layout.astro';

// Project data
const projects = [
  {
    title: "Statera",
    description: "Designed a modern e-commerce application with focus on user experience and intuitive navigation. Conducted user research and created wireframes and prototypes.",
    shortDescription: "Modern e-commerce app with intuitive UX",
    type: "app",
    icon: "/images/Asset-3.png",
    timeframe: "Jan 2024 - Mar 2024",
    featured: true,
    highlightImage: "/images/ecommerce-featured.jpg",
    featureTitle: "Gain work-life balance",
    featureSubtitle: "Split and schedule your tasks with complete control"
  },
  {
    title: "Portfolio Website UI", 
    description: "Created a responsive portfolio website design with modern aesthetics and smooth interactions. Focused on accessibility and mobile-first design.",
    shortDescription: "Responsive portfolio with modern design",
    type: "website",
    icon: "/images/Asset-2.png",
    timeframe: "Jan 2024 - Mar 2024",
    featured: false
  },
  {
    title: "Mobile Game Interface",
    description: "Designed user interface for a mobile puzzle game with engaging interactions and smooth animations. Created design system and component library.",
    shortDescription: "Mobile game UI with engaging interactions",
    type: "game", 
    icon: "/images/Asset-4.png",
    timeframe: "Jan 2024 - Mar 2024",
    featured: false
  },
  {
    title: "Dashboard Redesign",
    description: "Redesigned analytics dashboard for better data visualization and user workflow. Improved information architecture and user flow.",
    shortDescription: "Analytics dashboard with better visualization",
    type: "web app",
    icon: "/images/Asset-3.png",
    timeframe: "Jan 2024 - Mar 2024",
    featured: false
  }
];
---

<style>
  .hero-section {
    margin: 2rem 0 4rem 0;
    width: 100vw;
    position: relative;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
  }

  .hero-container {
    position: relative;
    width: 100%;
    max-width: none;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .hero-image {
    width: 100%;
    height: auto;
    display: block;
    border-radius: 0;
  }

  .hero-content {
    position: absolute;
    top: 25%;
    right: 0;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 1.5rem;
    z-index: 10;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    box-sizing: border-box;
    left: 50%;
    transform: translateX(-50%);
  }

  .hero-text {
    color: rgba(255, 255, 255, 0.884);
    font-weight: 700;
    line-height: 1.1;
    text-align: right;
    padding: 0rem 0.5rem;
    font-size: clamp(1.25rem, 3vw + 0.5rem, 2.5rem);
    max-width: 600px;
    margin-left: auto;
  }

  .hero-buttons {
    display: flex;
    gap: 1rem;
    align-items: center;
  }

  .hero-btn {
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
  }

  /* Circle Button with Gradient Border */
  .hero-btn.circle {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    isolation: isolate;
    position: relative;
    overflow: hidden;
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(10px) saturate(180%);
    -webkit-backdrop-filter: blur(10px) saturate(180%);
    border: 1px solid rgba(255, 255, 255, 0.24);
    transition: all 0.4s ease;
  }

  .hero-btn.circle::before {
    content: '';
    position: absolute;
    top: -2px;
    left: -2px;
    right: -2px;
    bottom: -2px;
    background: linear-gradient(
      45deg,
      #667eea60 0%,
      #764ba260 25%,
      #f193fb60 50%,
      #f5576c60 75%,
      #667eea60 100%
    );
    background-size: 400% 400%;
    animation: gradientShift 8s ease infinite;
    border-radius: 50%;
    z-index: -1;
    opacity: 0%;
  }

  .hero-btn.circle::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      135deg,
      rgba(255, 255, 255, 0.1) 0%,
      rgba(255, 255, 255, 0.05) 40%,
      transparent 60%,
      rgba(255, 255, 255, 0.08) 100%
    );
    border-radius: 50%;
    pointer-events: none;
    z-index: 1;
  }

  .hero-btn.circle:hover {
    transform: translateY(-2px);
    box-shadow: 0 12px 35px rgba(0, 0, 0, 0.5);
    background: linear-gradient(
      15deg,
      #e4e4e460 0%,
      #dfae4460 10%,
      #d46e3e60 20%,
      #eb394860 30%,
      #216bcc60 100%
    );
    background-size: 400% 400%;
    animation: gradientShift 4s ease infinite;
    border: 1px solid rgba(255, 255, 255, 0.5);
  }

  .hero-btn.circle:hover::before {
    opacity: 0;
  }

  /* Rectangle Button */
  .hero-btn.rectangle {
    height: 60px;
    padding: 0 2rem;
    border-radius: 30px;
    color: rgba(255, 255, 255, 0.9);
    font-family: var(--font-primary);
    font-weight: 700;
    font-size: 1.1rem;
    isolation: isolate;
    position: relative;
    overflow: hidden;
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(10px) saturate(180%);
    -webkit-backdrop-filter: blur(10px) saturate(180%);
    border: 1px solid rgba(255, 255, 255, 0.24);
    transition: all 0.4s ease;
  }

  .hero-btn.rectangle::before {
    content: '';
    position: absolute;
    top: -2px;
    left: -2px;
    right: -2px;
    bottom: -2px;
    background: linear-gradient(
      45deg,
      #667eea60 0%,
      #764ba260 25%,
      #f193fb60 50%,
      #f5576c60 75%,
      #667eea60 100%
    );
    background-size: 400% 400%;
    animation: gradientShift 8s ease infinite;
    border-radius: 32px;
    z-index: -1;
    opacity: 0%;
  }

  .hero-btn.rectangle::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      135deg,
      rgba(255, 255, 255, 0.1) 0%,
      rgba(255, 255, 255, 0.05) 40%,
      transparent 60%,
      rgba(255, 255, 255, 0.08) 100%
    );
    border-radius: 30px;
    pointer-events: none;
    z-index: 1;
  }

  .hero-btn.rectangle:hover {
    transform: translateY(-2px);
    box-shadow: 0 12px 35px rgba(0, 0, 0, 0.5);
    color: rgba(255, 255, 255, 1);
    background: linear-gradient(
      15deg,
      #e4e4e460 0%,
      #dfae4460 10%,
      #d46e3e60 20%,
      #eb394860 30%,
      #216bcc60 100%
    );
    background-size: 400% 400%;
    animation: gradientShift 4s ease infinite;
    border: 1px solid rgba(255, 255, 255, 0.5);
  }

  .hero-btn.rectangle:hover::before {
    opacity: 0;
  }

  /* Gradient animation */
  @keyframes gradientShift {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  .btn-icon {
    width: 24px;
    height: 24px;
    opacity: 60%;
  }

  .hero-btn.circle:hover .btn-icon {
    opacity: 100%;
  }

  .section-label {
    font-size: 2rem;
    font-weight: 700;
    opacity: 85%;
    margin-bottom: -1.5rem;
    text-align: left;
  }

  .divider {
    height: 2px;
    background: linear-gradient(90deg, rgba(255, 255, 255, 0.171));
    margin: 2rem 0 3rem 0;
  }

  /* Mobile adjustments */
  @media (max-width: 768px) {
    .hero-container {
      padding: 0 0.5rem;
    }
    
    .hero-content {
      padding: 0 1rem;
      top: 20%;
      gap: 1rem;
    }
    
    .hero-text {
      font-size: clamp(1rem, 4vw, 1.3rem);
      line-height: 1.2;
      max-width: 280px;
    }
    
    .hero-buttons {
      gap: 0.75rem;
    }
    
    .hero-btn.circle {
      width: 45px;
      height: 45px;
    }
    
    .hero-btn.rectangle {
      height: 45px;
      padding: 0 1.25rem;
      font-size: 0.85rem;
    }
    
    .btn-icon {
      width: 18px;
      height: 18px;
    }

    .section-label {
      font-size: 1.3rem !important;
      margin-bottom: -1.5rem;
    }
  }

  @media (max-width: 480px) {
    .hero-content {
      top: 15%;
    }
    
    .hero-text {
      font-size: 0.9rem;
      max-width: 250px;
    }
  }
</style>

<Layout
  title="Apoorv Singh - UX Design Intern"
  description="Creating intuitive digital experiences through user-centered design"
>
  <!-- Hero Section -->
  <section class="hero-section">
    <div class="hero-container">
      <img src="/images/Grid Updated.png" alt="Apoorv Singh - UX Design Intern" class="hero-image" />
      
      <div class="hero-content">
        <div class="hero-text">
          I am a UX Designer focused
          on creating accessible and
          engaging user experiences
        </div>
        <div class="hero-buttons">
          <a href="https://www.linkedin.com/in/apoorv-singh-87377021b/" class="hero-btn circle" target="_blank">
            <img src="/images/linked in logo.png" alt="LinkedIn" class="btn-icon" />
          </a>
          <button class="hero-btn rectangle">Toolkit</button>
        </div>
      </div>
    </div>
  </section>

  <!-- Projects Section -->
  <section class="projects-section">
    <h2 class="section-label">Projects</h2>
    <div class="divider"></div>
    
    <div class="projects-grid">
      {projects.map(project => (
        project.featured ? (
          <!-- Featured Project Card -->
          <article class="project-card featured-card">
            <!-- Desktop Layout -->
            <div class="featured-desktop">
              <div class="featured-info">
                <div class="project-icon-container">
                  <img src={project.icon} alt={project.title} class="project-icon-img" />
                </div>
                <div class="project-meta">
                  <div class="project-header">
                    <div class="project-title-container">
                      <h3 class="project-title">{project.title}</h3>
                      <div class="project-timeframe">{project.timeframe}</div>
                    </div>
                    <span class="project-type">{project.type}</span>
                  </div>
                </div>
              </div>
              <div class="featured-highlight" style={`background-image: url('/images/stat ft.jpg`}>
                <div class="featured-gradient"></div>
                <div class="featured-content">
                  <h4 class="featured-title">{project.featureTitle}</h4>
                  <p class="featured-subtitle">{project.featureSubtitle}</p>
                </div>
              </div>
            </div>
            
            <!-- Mobile Layout -->
            <div class="featured-mobile">
              <div class="featured-top" style={`background-image: url('/images/stat ft.jpg')`}>
                <div class="mobile-gradient"></div>
                <div class="mobile-featured-content">
                  <h4 class="featured-title">{project.featureTitle}</h4>
                  <p class="featured-subtitle">{project.featureSubtitle}</p>
                </div>
              </div>
              <div class="featured-bottom">
                <div class="mobile-project-info">
                  <img src={project.icon} alt={project.title} class="mobile-icon" />
                  <div class="mobile-details">
                    <div class="project-header">
                      <div class="project-title-container">
                        <h3 class="project-title">{project.title}</h3>
                        <div class="project-timeframe">{project.timeframe}</div>
                      </div>
                    </div>
                    <p class="project-short-description">{project.shortDescription}</p>
                  </div>
                  <span class="project-type">{project.type}</span>
                </div>
              </div>
            </div>
          </article>
        ) : (
          <!-- Standard Project Card -->
          <article class="project-card standard-card">
            <div class="project-icon-container">
              <img src={project.icon} alt={project.title} class="project-icon-img" />
            </div>
            <div class="project-content">
              <div class="project-header">
                <div class="project-title-container">
                  <h3 class="project-title">{project.title}</h3>
                  <div class="project-timeframe">{project.timeframe}</div>
                </div>
                <span class="project-type">{project.type}</span>
              </div>
              <p class="project-description">{project.description}</p>
            </div>
          </article>
        )
      ))}
    </div>
  </section>
</Layout>