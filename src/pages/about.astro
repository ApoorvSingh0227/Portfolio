<style>
  /* Global Styles */
  :root {
    --card-radius: 16px;
    --section-spacing: 3rem;
  }

  .about-header {
    margin-bottom: 3rem;
    width: 100%;
  }
  
  .page-title {
    font-size: 2rem;
    font-weight: 700;
    opacity: 85%;
    margin-bottom: -1.5rem;
    text-align: left;
    font-family: var(--font-primary);
    color: var(--white);
  }
  
  .page-description {
    color: rgba(255, 255, 255, 0.8);
    font-size: 1.1rem;
    line-height: 1.6;
    max-width: 100%;
    margin-top: 2.5rem;
  }
  
  .about-divider {
    height: 2px;
    background: linear-gradient(90deg, rgba(255, 255, 255, 0.171));
    margin: 2rem 0 3rem 0;
    width: 100%;
  }

  /* Section Titles */
  .section-title {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
    margin-top: 0;
    color: var(--white);
    font-family: var(--font-primary);
  }

  .experience-header .section-title {
    margin-bottom: -1rem;
  }

  .subsection-title {
    font-size: 1.2rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: var(--white);
    font-family: var(--font-primary);
    opacity: 0.9;
  }

  /* Profile & Experience Section (Desktop: 1x2 table) */
  .profile-experience-section {
    display: grid;
    grid-template-columns: 20% 80%;
    gap: 3rem;
    margin-bottom: var(--section-spacing);
    align-items: start;
  }

  /* Profile Image Column */
  .profile-column {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .profile-image-container {
    width: 100%;
    aspect-ratio: 1/1;
    border-radius: var(--card-radius);
    overflow: hidden;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .profile-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Experience Column */
  .experience-column {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .experience-header {
    margin-bottom: 0.5rem;
  }

  .experience-grid {
    display: grid;
    grid-template-columns: 10% 70%;
    gap: 3rem;
    align-items: start;
  }

  .experience-icon {
    width: 100%;
    height: 100%;
    aspect-ratio: 1/1;
    border-radius: 12px;
    overflow: hidden;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .experience-icon img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .experience-content {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  /* Job Experience Styling */
  .job-experience {
    margin-bottom: 0rem;
    margin-top: 1rem;
  }


  .job-title {
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--white);
    margin-bottom: 0.25rem;
    margin-top: 0;
  }

  .job-company {
    font-size: 1rem;
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: 0.5rem;
    font-style: italic;
  }

  .job-timeframe {
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.6);
    margin-bottom: 0.75rem;
  }

  .job-responsibilities {
    list-style-type: none;
    padding-left: 0;
    margin: 0;
  }

  .job-responsibilities li {
    position: relative;
    padding-left: 1.5rem;
    margin-bottom: 0.5rem;
    color: rgba(255, 255, 255, 0.85);
    line-height: 1.5;
  }

  .job-responsibilities li::before {
    content: "•";
    position: absolute;
    left: 0.5rem;
    color: rgba(255, 255, 255, 0.6);
  }

  /* Bullet points within bullet points */
  .job-sub-responsibilities {
    list-style-type: none;
    padding-left: 1.5rem;
    margin-top: 0.25rem;
    margin-bottom: 0.5rem;
  }

  .job-sub-responsibilities li {
    position: relative;
    padding-left: 1rem;
    margin-bottom: 0.25rem;
    color: rgba(255, 255, 255, 0.75);
    font-size: 0.95rem;
    line-height: 1.4;
  }

  .job-sub-responsibilities li::before {
    content: "◦";
    position: absolute;
    left: 0;
    color: rgba(255, 255, 255, 0.5);
  }

  /* Background Section */
  .background-section {
    margin-bottom: var(--section-spacing);
  }

  .background-content {
    background: rgba(255, 255, 255, 0.05);
    border-radius: var(--card-radius);
    padding: 0.5rem 2rem 1rem 2rem;
    border: 1px solid rgba(255, 255, 255, 0.1);
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.85);
  }

  /* Education & Skills Grid (Desktop: 2 columns) */
  .education-skills-section {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    margin-bottom: var(--section-spacing);
  }

  .education-column,
  .skills-column {
    display: flex;
    flex-direction: column;
  }

  /* Skills/Toolkit Tag System */
  .skills-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    margin-top: 0.5rem;
  }

  .skill-tag {
    background: rgba(255, 255, 255, 0.08);
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: 20px;
    padding: 0.5rem 1rem;
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(10px);
    transition: all 0.3s ease;
  }

  .skill-tag:hover {
    background: rgba(255, 255, 255, 0.12);
    border-color: rgba(255, 255, 255, 0.25);
    transform: translateY(-2px);
  }

  /* Toolkit Section */
  .toolkit-section {
    margin-bottom: var(--section-spacing);
  }

  .toolkit-categories {
    display: grid;
    grid-template-rows: repeat(2, 1fr);
    margin-top: -1rem;
    gap: 0.5rem;
  }

  .toolkit-category h4 {
    font-size: 1.1rem;
    margin-bottom: 1rem;
    color: var(--white);
    font-family: var(--font-primary);
    opacity: 0.9;
  }

  /* Connect Section */
  .connect-section {
    margin-bottom: var(--section-spacing);
  }

  .connect-content {
    background: rgba(255, 255, 255, 0.05);
    border-radius: var(--card-radius);
    padding: 0rem 2rem 1rem 2rem;
    border: 1px solid rgba(255, 255, 255, 0.1);
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.85);
  }

  .contact-methods {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.75rem;
    margin-top: 1.5rem;
  }

  .contact-button {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 1.5rem;
    border-radius: 30px;
    text-decoration: none;
    font-weight: 700;
    transition: all 0.4s ease;
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(10px) saturate(180%);
    -webkit-backdrop-filter: blur(10px) saturate(180%);
    border: 1px solid rgba(255, 255, 255, 0.24);
    color: rgba(255, 255, 255, 0.9);
    font-family: var(--font-primary);
    font-size: 1rem;
    isolation: isolate;
    position: relative;
    overflow: hidden;
    white-space: nowrap;
    flex-shrink: 0;
  }

  .contact-button::before {
    content: '';
    position: absolute;
    top: -2px;
    left: -2px;
    right: -2px;
    bottom: -2px;
    background: linear-gradient(
      45deg,
      #667eea60 0%,
      #764ba260 25%,
      #f193fb60 50%,
      #f5576c60 75%,
      #667eea60 100%
    );
    background-size: 400% 400%;
    animation: gradientShift 8s ease infinite;
    border-radius: 32px;
    z-index: -1;
    opacity: 0%;
  }

  .contact-button::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      135deg,
      rgba(255, 255, 255, 0.1) 0%,
      rgba(255, 255, 255, 0.05) 40%,
      transparent 60%,
      rgba(255, 255, 255, 0.08) 100%
    );
    border-radius: 30px;
    pointer-events: none;
    z-index: 1;
  }

  @keyframes gradientShift {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }

  .contact-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 12px 35px rgba(0, 0, 0, 0.5);
    color: rgba(255, 255, 255, 1);
    background: linear-gradient(
      15deg,
      #e4e4e460 0%,
      #dfae4460 10%,
      #d46e3e60 20%,
      #eb394860 30%,
      #216bcc60 100%
    );
    background-size: 400% 400%;
    animation: gradientShift 4s ease infinite;
    border: 1px solid rgba(255, 255, 255, 0.5);
  }

  .contact-button:hover::before {
    opacity: 0;
  }

  .btn-icon {
    width: 24px;
    height: 24px;
    opacity: 60%;
  }

  /* ========== MOBILE RESPONSIVE ========== */
@media (max-width: 768px) {
  .page-title {
    font-size: 1.3rem !important;
    margin-bottom: -2rem;
  }

  .background-content p,
  .connect-content p {
    padding-top: 0.25rem !important; /* Adjust this value as needed */
    margin-top: 0 !important; /* Also remove any margin if present */
  }

  .page-description {
    font-size: 0.9rem !important;
    margin-bottom: -2rem;
    line-height: 1.2rem;
  }

  .section-title {
    font-size: 1.2rem;
    margin-bottom: 1rem;
  }

  .subsection-title {
    font-size: 1rem;
  }

  /* Profile & Experience - Stack vertically with proper order */
  .profile-experience-section {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  /* Profile Image - Centered */
  .profile-column {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 1rem;
  }

  .profile-image-container {
    width: 150px;
    height: 150px;
    margin: 0 auto;
  }

  /* Experience Section - Below profile */
  .experience-column {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    width: 100%;
  }

  .experience-header {
    text-align: left;
    margin-bottom: 0;
  }

  /* Experience Grid - Icon becomes horizontal banner */
  .experience-grid {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    width: 100%;
  }

  .experience-icon {
    width: 100%;
    height: 50px; /* Horizontal banner */
    aspect-ratio: unset;
    border-radius: 12px;
    margin-bottom: 0;
    order: 1;
  }

  .experience-icon img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .experience-content {
    order: 2;
    gap: 1.5rem;
  }

  /* Education & Skills - Stack vertically */
  .education-skills-section {
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  /* Toolkit - Stack categories */
  .toolkit-categories {
    grid-template-columns: 1fr;
    margin-top: -1rem;
    margin-bottom: -2rem;
    gap: 0.5rem;
  }

  /* Adjust content spacing */
  .background-content,
  .connect-content {
    padding: 1.5rem;
  }

  /* Contact buttons - Adjust for mobile */
  .contact-methods {
    flex-direction: row;
    align-items: center;
  }
  
  .contact-button {
    justify-content: center;
    padding: 0.875rem 1.5rem;
    font-size: 0.9rem;
  }

  .contact-button .btn-icon {
    height: 20px;
    width: 20px;
  }

  /* Adjust job experience for mobile */
  .job-title {
    font-size: 1rem;
  }

  .job-company {
    font-size: 0.9rem;
  }

  .job-timeframe {
    font-size: 0.8rem;
  }

  .job-responsibilities li {
    font-size: 0.9rem;
    padding-left: 1.25rem;
  }

  .job-sub-responsibilities li {
    font-size: 0.85rem;
    padding-left: 0.75rem;
  }
}

/* Very small screens */
@media (max-width: 480px) {
  .profile-image-container {
    width: 120px;
    height: 120px;
  }

  .experience-icon {
    height: 40px; /* Smaller on very small screens */
  }

  .background-content,
  .connect-content {
    padding: 1rem;
  }

  .skills-tags {
    gap: 0.5rem;
  }

  .skill-tag {
    padding: 0.4rem 0.8rem;
    font-size: 0.8rem;
  }

  .contact-button {
    padding: 0.75rem 1.25rem;
    font-size: 0.85rem;
  }
}
