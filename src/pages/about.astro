---
import Layout from '../components/layout.astro';
---

<Layout
  title="About - Apoorv Singh"
  description="Learn more about my background, skills, and experience as a UX designer"
>

<style>
  .about-header {
    margin-bottom: 3rem;
    width: 100%;
  }
  
  .page-title {
    font-size: 2rem;
    font-weight: 700;
    opacity: 85%;
    margin-bottom: -1.5rem;
    text-align: left;
    font-family: var(--font-primary);
    color: var(--white);
  }
  
  .page-description {
    color: rgba(255, 255, 255, 0.8);
    font-size: 1.1rem;
    line-height: 1.6;
    max-width: 100%;
    margin-top: 2.5rem;
  }
  
  .about-divider {
    height: 2px;
    background: linear-gradient(90deg, rgba(255, 255, 255, 0.171));
    margin: 2rem 0 0rem 0;
    width: 100%;
  }
  
  /* About content sections */
  .about-section {
    margin-bottom: 2rem;
  }
  
  .section-title {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
    color: var(--white);
    font-family: var(--font-primary);
  }
  
  .about-content {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 16px;
    padding: 0rem 1.5rem 0.75rem 1.5rem;
    border: 1px solid rgba(255, 255, 255, 0.1);
    line-height: 1.4;
    color: rgba(255, 255, 255, 0.85);
  }
  
  /* Contact info */
  .contact-info {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
    margin-top: 1.5rem;
  }
  
  .contact-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 12px;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .contact-item:hover {
    transform: translateY(-5%);
    border: 1px solid rgba(255, 255, 255, 0.3);
  }
  
  .contact-methods {
    display: flex;
    justify-content: center;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .contact-button {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 1.5rem;
    border-radius: 30px;
    text-decoration: none;
    font-weight: 700;
    transition: all 0.4s ease;
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(10px) saturate(180%);
    -webkit-backdrop-filter: blur(10px) saturate(180%);
    border: 1px solid rgba(255, 255, 255, 0.24);
    color: rgba(255, 255, 255, 0.9);
    font-family: var(--font-primary);
    font-size: 1rem;
    isolation: isolate;
    position: relative;
    overflow: hidden;
    white-space: nowrap;
    flex-shrink: 0;
  }

  .contact-button::before {
    content: '';
    position: absolute;
    top: -2px;
    left: -2px;
    right: -2px;
    bottom: -2px;
    background: linear-gradient(
      45deg,
      #667eea60 0%,
      #764ba260 25%,
      #f193fb60 50%,
      #f5576c60 75%,
      #667eea60 100%
    );
    background-size: 400% 400%;
    animation: gradientShift 8s ease infinite;
    border-radius: 32px;
    z-index: -1;
    opacity: 0%;
  }

  .contact-button::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      135deg,
      rgba(255, 255, 255, 0.1) 0%,
      rgba(255, 255, 255, 0.05) 40%,
      transparent 60%,
      rgba(255, 255, 255, 0.08) 100%
    );
    border-radius: 30px;
    pointer-events: none;
    z-index: 1;
  }

  .contact-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 12px 35px rgba(0, 0, 0, 0.5);
    color: rgba(255, 255, 255, 1);
    background: linear-gradient(
      15deg,
      #e4e4e460 0%,
      #dfae4460 10%,
      #d46e3e60 20%,
      #eb394860 30%,
      #216bcc60 100%
    );
    background-size: 400% 400%;
    animation: gradientShift 4s ease infinite;
    border: 1px solid rgba(255, 255, 255, 0.5);
  }

  .contact-button:hover::before {
    opacity: 0;
  }

  .contact-icon {
    font-size: 1.5rem;
  }
  
  .contact-text {
    display: flex;
    flex-direction: column;
  }
  
  .contact-label {
    font-size: 0.85rem;
    opacity: 0.7;
  }
  
  .contact-value {
    font-weight: 500;
  }

  .btn-icon {
    width: 24px;
    height: 24px;
    opacity: 60%;
  }
  
  /* Mobile adjustments */
  @media (max-width: 768px) {
    .about-section {
      margin-bottom: 2.5rem;
    }
    
    .contact-info {
      grid-template-columns: 1fr;
    }

    .page-title {
      font-size: 1.3rem !important;
      margin-bottom: -2rem;
    }

    .page-description {
      font-size: 0.9rem !important;
      margin-bottom: -2rem;
      line-height: 1.2rem;
    }

    .section-title {
      font-size: 1rem;
      margin-top: 1rem;
    }

    .about-content {
      padding: 0rem 0.75rem 1rem 0.75rem;
      margin-bottom: -1rem;
      font-size: 0.9rem;
    }

    .contact-methods {
      flex-direction: row;
      align-items: center;
    }
    
    .contact-button {
      justify-content: center;
      padding: 0.875rem 1.5rem;
      font-size: 0.8rem;
    }

    .contact-button .btn-icon {
      height: 15px;
      width: 15px;
    }
  }
</style>

