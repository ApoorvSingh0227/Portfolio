  <p class="page-description">A visual collection of my illustration and design work.</p>
</div>

<div class="gallery-divider"></div>

<!-- Gallery Grid -->
<div class="gallery-container">
  <div class="gallery-grid">
    {galleryImages.map(image => (
      <div 
        class="gallery-item"
        style={`--zoom-level: ${image.zoomLevel};`}
        data-image-id={image.id}
      >
        <div class="gallery-image-container">
          <img 
            src={image.image} 
            alt={image.title}
            class="gallery-image"
            loading="lazy"
            style={`--image-position: ${image.position};`}
          />
          <span class="gallery-category">{image.category}</span>
        </div>
        <div class="gallery-overlay">
          <h3 class="gallery-title">{image.title}</h3>
          <p class="gallery-description">{image.description}</p>
        </div>
      </div>
    ))}
  </div>
</div> 

<!-- Lightbox for larger view -->
<div class="lightbox" id="lightbox">
  <button class="lightbox-close" id="lightboxClose">&times;</button>
  <div class="lightbox-nav">
    <button class="lightbox-nav-button" id="lightboxPrev">←</button>
    <button class="lightbox-nav-button" id="lightboxNext">→</button>
  </div>
  <img class="lightbox-image" id="lightboxImage" />
</div>

<script>
  // Lightbox functionality
  document.addEventListener('DOMContentLoaded', function() {
    const galleryItems = document.querySelectorAll('.gallery-item');
    const lightbox = document.getElementById('lightbox');
    const lightboxImage = document.getElementById('lightboxImage');
    const lightboxClose = document.getElementById('lightboxClose');
    const lightboxPrev = document.getElementById('lightboxPrev');
    const lightboxNext = document.getElementById('lightboxNext');
    
    const galleryImages = Array.from(galleryItems);
    let currentImageIndex = 0;
    
    function getImageInfo(element) {
      const imgElement = element.querySelector('.gallery-image');
      return {
        src: imgElement?.src || '',
        alt: imgElement?.alt || ''
      };
    }
    
    galleryItems.forEach((item, index) => {
      item.addEventListener('click', function() {
        const imgInfo = getImageInfo(this);
        if (lightboxImage) {
          lightboxImage.src = imgInfo.src;
          lightboxImage.alt = imgInfo.alt;
        }
        currentImageIndex = index;
        lightbox?.classList.add('active');
        document.body.style.overflow = 'hidden';
      });
    });
    
    lightboxClose?.addEventListener('click', function() {
      lightbox?.classList.remove('active');
      document.body.style.overflow = '';
    });
    
    lightbox?.addEventListener('click', function(e) {
      if (e.target === lightbox) {
        lightbox.classList.remove('active');
        document.body.style.overflow = '';
      }
    });
    
    function showImage(index) {
      if (index >= 0 && index < galleryImages.length) {
        const imgInfo = getImageInfo(galleryImages[index]);
        if (lightboxImage) {
          lightboxImage.src = imgInfo.src;
          lightboxImage.alt = imgInfo.alt;
        }
        currentImageIndex = index;
      }
    }
    
    lightboxPrev?.addEventListener('click', function(e) {
      e.stopPropagation();
      let newIndex = currentImageIndex - 1;
      if (newIndex < 0) newIndex = galleryImages.length - 1;
      showImage(newIndex);
    });
    
    lightboxNext?.addEventListener('click', function(e) {
      e.stopPropagation();
      let newIndex = currentImageIndex + 1;
      if (newIndex >= galleryImages.length) newIndex = 0;
      showImage(newIndex);
    });
    
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape' && lightbox?.classList.contains('active')) {
        lightbox.classList.remove('active');
        document.body.style.overflow = '';
      }
      if (lightbox?.classList.contains('active')) {
        if (e.key === 'ArrowLeft') {
          let newIndex = currentImageIndex - 1;
          if (newIndex < 0) newIndex = galleryImages.length - 1;
          showImage(newIndex);
        } else if (e.key === 'ArrowRight') {
          let newIndex = currentImageIndex + 1;
          if (newIndex >= galleryImages.length) newIndex = 0;
          showImage(newIndex);
        }
      }
    });
  });
</script>

</Layout>