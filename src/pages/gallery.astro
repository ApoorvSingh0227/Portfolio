<Layout
  title="Gallery - Apoorv Singh"
  description="Visual design work, illustrations, and design explorations"
>

<style>
  .gallery-header {
    margin-bottom: -1rem;
    width: 100%;
  }
  
  .page-title {
    font-size: 2rem;
    font-weight: 700;
    opacity: 85%;
    margin-bottom: -1.5rem;
    text-align: left;
    font-family: var(--font-primary);
    color: var(--white);
  }
  
  .page-description {
    color: rgba(255, 255, 255, 0.8);
    font-size: 1.1rem;
    line-height: 1.6;
    max-width: 100%;
    margin-top: 2.5rem;
  }

  .gallery-container {
    padding-bottom: 4rem; 
    min-height: calc(100vh - 15vh - 70px);
  }

  .main-content {
    padding-bottom: 4rem !important;
  }
  
  .gallery-divider {
    height: 2px;
    background: linear-gradient(90deg, rgba(255, 255, 255, 0.171));
    margin: 3rem 0 -0.5rem 0;
    width: 100%;
  }
  
  /* Gallery Grid */
  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr); /* 3 columns on desktop */
    gap: 0.8rem;
    margin-top: 2rem;
  }
  
  /* Gallery Item */
  .gallery-item {
    position: relative;
    border-radius: 12px;
    overflow: hidden;
    aspect-ratio: 1 / 1; /* Always square */
    cursor: pointer;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  /* Image container */
  .gallery-image-container {
    width: 100%;
    height: 100%;
    overflow: hidden;
    position: relative;
  }
  
  .gallery-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  /* Custom positioning and zoom styling */
  .gallery-image {
    object-position: var(--image-position, 50% 50%);
  }
  
  .gallery-item:hover .gallery-image {
    transform: scale(var(--zoom-level, 1.1));
  }
  
  /* Overlay with info */
  .gallery-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.9), transparent);
    padding: 1.5rem;
    color: white;
    transform: translateY(100%);
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    opacity: 0;
  }
  
  .gallery-item:hover .gallery-overlay {
    transform: translateY(0);
    opacity: 1;
  }
  
  .gallery-item:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
    border-color: rgba(255, 255, 255, 0.3);
  }
  
  /* Category tag */
  .gallery-category {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(10px);
    padding: 0.4rem 0.8rem;
    border-radius: 20px;
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  
  /* Overlay content */
  .gallery-title {
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    font-family: var(--font-primary);
  }
  
  .gallery-description {
    font-size: 0.85rem;
    opacity: 0.8;
    line-height: 1.4;
    margin: 0;
  }
  
  /* Lightbox styles */
  .lightbox {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.95);
    z-index: 2000;
    justify-content: center;
    align-items: center;
    padding: 2rem;
  }
  
  .lightbox.active {
    display: flex;
  }
  
  .lightbox-image {
    max-width: 90%;
    max-height: 90%;
    object-fit: contain;
    border-radius: 8px;
  }
  
  .lightbox-close {
    position: absolute;
    top: 2rem;
    right: 2rem;
    background: rgba(255, 255, 255, 0.1);
    border: none;
    color: white;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    font-size: 1.5rem;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 2001;
  }

  .lightbox-nav {
    position: absolute;
    width: 100%;
    top: 50%;
    transform: translateY(-50%);
    display: flex;
    justify-content: space-between;
    padding: 0 2rem;
    z-index: 2001;
  }

  .lightbox-nav-button {
    background: rgba(255, 255, 255, 0.1);
    border: none;
    color: white;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    font-size: 1.5rem;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background 0.2s ease;
  }

  .lightbox-nav-button:hover {
    background: rgba(255, 255, 255, 0.2);
  }
  
  /* Mobile Responsive */
  @media (max-width: 768px) {
    .gallery-grid {
      grid-template-columns: repeat(2, 1fr); /* 2 columns on mobile */
      gap: 0.5rem;
    }
    
    .gallery-overlay {
      transform: translateY(0);
      opacity: 1;
      background: linear-gradient(to top, rgba(0, 0, 0, 0.8), transparent 60%);
      padding: 1rem;
    }
    
    .gallery-title {
      font-size: 0.9rem;
    }
    
    .gallery-description {
      font-size: 0.75rem;
      display: none; /* Hide description on mobile to save space */
    }
    
    .gallery-category {
      font-size: 0.6rem;
      padding: 0.3rem 0.6rem;
    }

    .lightbox-nav {
      padding: 0 1rem;
    }

    .lightbox-nav-button {
      width: 40px;
      height: 40px;
      font-size: 1.2rem;
    }
    
    .page-title {
      font-size: 1.3rem !important;
      margin-bottom: -2rem;
    }

    .page-description {
      font-size: 0.9rem !important;
      margin-bottom: -2rem;
      line-height: 1.2rem;
    }
  }
  
  @media (max-width: 480px) {
    .gallery-grid {
      grid-template-columns: 1fr; /* 1 column on very small screens */
    }

    .gallery-header {
      margin-bottom: 3rem;
    }
  }
</style>

